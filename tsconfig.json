{
	"extends": "@tsconfig/node12/tsconfig.json",
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./dist/",
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@common": ["./common"],
			"@common/*": ["./common/*"]
		},
		"experimentalDecorators": true,
		"esModuleInterop": true
	},
	"include": ["./src/client", "./src/common"]
}
